<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_pos_order_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <style>
                body {
                    margin-top: 0;
                    padding-top: 0;
                }
                    </style>
                    <div class="page" style="width:80mm; font-size:12px;">
                        <!-- Información de la empresa -->
                        <span t-field="o.company_id.name"/>
                        <br/>
                            CIF/NIF:
                        <span t-field="o.company_id.vat"/>
                            Telefono:
                        <span t-field="o.company_id.phone"/>
                        <br/>
                        <span t-field="o.company_id.street"/>
                        <br/>
                        <span t-field="o.company_id.zip"/>
                        <span t-field="o.company_id.city"/>
                        <br/>
                        <br/>
                        <br/>                            User:
                        <span t-field="o.user_id"/>
                        <br/>
                        <br/>
                        <span style="text-align:center; display:block;"> DUPLICAR </span>
                        <br/>
                        <br/>
                       Fecha:
                        <span t-field="o.date_order" />
                        <br/>                        Cliente:
                        <span t-field="o.partner_id.name"/>
                        <br/>                        CIF/NIF:
                        <span t-field="o.partner_id.vat"/>
                        <br/>
                        <span t-field="o.partner_id.street"/>
                        <span t-field="o.partner_id.city"/>
                        <span t-field="o.partner_id.state_id.name"/>
                        <span t-field="o.partner_id.country_id.name"/>
                        <span t-field="o.partner_id.zip"/>
                        <br/>
                        <br/>
                        <br/>
                        <!-- Detalles de los productos -->
                        <table class="table table-condensed" style="font-size:12px;">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Cantidad</th>
                                    <th>Precio unitario</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.lines" t-as="line">
                                    <td>
                                        <span t-field="line.full_product_name"/>
                                    </td>
                                    <td>
                                        <span t-field="line.qty"/>
                                    </td>
                                    <td>
                                        <span t-field="line.price_unit" t-options='{"widget": "monetary"}'/>
                                    </td>
                                    <td>
                                        <span t-field="line.price_subtotal_incl" t-options='{"widget": "monetary"}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <!-- Subtotal -->
                        <!--<p>Subtotal:
                            <span t-esc="sum(line.price_subtotal_incl for line in o.lines)"/>
                           <span t-field="o.company_id.currency_id.name" t-options="{&quot;widget&quot;: &quot;text&quot;}"/>
                        </p>-->
                        <!-- IVA -->
                        <t t-set="taxes" t-value="o.lines.mapped('tax_ids')"/>
                        <t t-foreach="taxes" t-as="tax">
                            <p>
                                <t t-esc="tax.name"/>
                            </p>
                        </t>
                        <p>
                            Impuestos totales:
                            <span t-field="o.amount_tax"/>
€
                        </p>
                        <p>
                            Subtotal:
                            <span t-esc="sum(line.price_subtotal for line in o.lines)"/>
€
                        </p>
                        <p>
                            TOTAL:
                            <span t-field="o.amount_total"/>
€
                        </p>
                        <!-- Información de los pagos -->
                        <table class="table table-condensed" style="font-size:12px;">
                            <thead>
                                <tr>
                                    <th>Método de pago</th>
                                    <th>Cantidad pagada</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.payment_ids" t-as="payment" t-if="payment.amount > 0">
                                    <td>
                                        <span t-field="payment.payment_method_id.name"/>
                                    </td>
                                    <td>
                                        <span t-field="payment.amount" t-options='{"widget": "monetary"}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <!-- Cambio -->
                        <p>Cambio:
                            <span t-field="o.amount_return" t-options='{"widget": "monetary"}'/>
                        </p>
                        <p>Eskerrik asko</p>
                    </div>
                    <div id="ticketbai" style="padding-top:50px; font-size:10px;" t-if="o.has_attribute('tbai_enabled') and o.tbai_enabled and o.has_attribute('tbai_invoice_id') and o.tbai_invoice_id.tbai_identifier and o.tbai_invoice_id.qr">
                        <ul id="tbai_identifier">
                            <strong  t-field="o.tbai_invoice_id.tbai_identifier"/>
                        </ul>
                        <ul id="tbai_qr" class="list-inline mb4">
                            <img t-att-src="'data:image/png;base64,%s' % to_text(o.tbai_invoice_id.qr)" style="min-width: 20mm; max-width: 30mm"/>
                        </ul>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>