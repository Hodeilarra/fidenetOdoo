<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

     <report
            id="report_pos_order_simplified"
            model="pos.order"
            string="Simplified Invoice"
            report_type="qweb-pdf"
            name="pos_order_report.report_pos_order_simplified"
            file="pos_order_report.report_pos_order_simplified"
            print_report_name="'Simplified Invoice - %s' % (object.name)"
        />

        <template id="report_pos_order_simplified">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <h2>Factura Simplificada: <span t-field="o.name"/></h2>
                        <p>Fecha: <span t-field="o.date_order"/></p>
                        <table>
                            <tr>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Precio</th>
                            </tr>
                            <t t-foreach="o.lines" t-as="line">
                                <tr>
                                    <td><span t-field="line.full_product_name"/></td>
                                    <td><span t-field="line.qty"/></td>
                                    <td><span t-field="line.price_subtotal_incl"/></td>
                                </tr>
                            </t>
                        </table>
                        <p>Total: <span t-field="o.amount_total"/></p>
                    </div>
                </t>
            </t>
        </template>


        
    </data>
</odoo>