<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_repair_order_inherit" model="ir.ui.view">
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="codigo_barras" readonly="True"/>
            </xpath>
            <xpath expr="//field[@name='codigo_barras']" position="after">
                <field name="presupuesto"/>
            </xpath>
        </field>
    </record>

    <record id="view_repair_order_tree_inherit" model="ir.ui.view">
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="codigo_barras" readonly="True"/>
            </xpath>
        </field>
    </record>

    <record id="view_sale_order_inherit" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="codigo_barras" readonly="1" />
            </xpath>
            <xpath expr="//field[@name='codigo_barras']" position="after">
                <field name="repair_id" readonly="1" />
            </xpath>
        <!--
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="codigo_barras" readonly="1" />
            </xpath>
            <xpath expr="//field[@name='codigo_barras']" position="after">
            <field name="ocultar" invisible="1"/>
                <field name="repair_id" attrs="{'invisible': [('ocultar', '=', True)]}"/>
            </xpath>
            <field name="ocultar" invisible="1"/>
            <xpath expr="//field[@name='codigo_barras']" position="attributes">
                <attribute  name="attrs" >{'invisible': [('ocultar', '=', True)]}</attribute>>
            </xpath>-->
        </field>
    </record>

    <record id="view_sale_order_tree_inherit" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="codigo_barras" readonly="True"/>
            </xpath>
        </field>
    </record>
</odoo>